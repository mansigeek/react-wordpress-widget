{
    "name": "next-js-folder-structure",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "start": "next start",
        "build": "npm run check:all && next build",
        "type-check": "tsc --noEmit",
        "lint": "eslint . --max-warnings=0",
        "lint:fix": "eslint . --fix",
        "lint:styles": "stylelint --allow-empty-input \"**/*.{css,scss}\"",
        "lint:styles:fix": "stylelint --allow-empty-input \"**/*.{css,scss}\" --fix",
        "format:prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "check:all": "npm run lint && npm run lint:styles",
        "fix:lints": "npm run lint:fix && npm run lint:styles:fix",
        "fix:all": "npm run format:prettier && npm run lint:fix && npm run lint:styles:fix",
        "prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
        "lint:staged": "lint-staged",
        "prepare": "husky install",
        "open:chrome": "npx playwright cr http://localhost:3000",
        "open:firefox": "npx playwright ff http://localhost:3000",
        "open:safari": "npx playwright wk http://localhost:3000"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix --max-warnings=0",
            "prettier --write"
        ],
        "*.{css,scss}": [
            "stylelint --fix --allow-empty-input"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@bprogress/next": "^3.2.12",
        "@radix-ui/react-slot": "^1.2.4",
        "@tanstack/react-query": "^5.90.12",
        "@virtuoso.dev/message-list": "^1.15.2",
        "autoprefixer": "^10.4.23",
        "axios": "^1.13.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "embla-carousel-react": "^8.6.0",
        "lucide-react": "^0.562.0",
        "next": "16.1.1",
        "next-auth": "^4.24.13",
        "plaiceholder": "^3.0.0",
        "postcss": "^8.5.6",
        "postcss-preset-env": "^10.5.0",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "react-hook-form": "^7.69.0",
        "react-virtuoso": "^4.17.0",
        "recharts": "^3.6.0",
        "sharp": "^0.34.5",
        "tailwind-merge": "^3.4.0",
        "zod": "^4.2.1",
        "zustand": "^5.0.9"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@tailwindcss/postcss": "^4",
        "@types/node": "^25",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9",
        "eslint-config-next": "16.1.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-better-tailwindcss": "^3.8.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-perfectionist": "^5.1.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-sort-keys-fix": "^1.1.2",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "stylelint": "^16.26.1",
        "stylelint-config-alphabetical-order": "^1.0.0",
        "stylelint-config-prettier-scss": "^1.0.0",
        "stylelint-config-recess-order": "^7.4.0",
        "stylelint-config-sass-guidelines": "^12.1.0",
        "stylelint-config-standard-scss": "^16.0.0",
        "stylelint-config-tailwindcss": "^1.0.0",
        "stylelint-order": "^7.0.0",
        "tailwindcss": "^4",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5"
    },
    "browserslist": [
        ">= 0.3%",
        "not dead",
        "not op_mini all"
    ]
}
